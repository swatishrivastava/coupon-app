<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/topbarlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <include layout="@layout/toolbar"></include>

    </android.support.design.widget.AppBarLayout>

    <EditText
        android:id="@+id/editText_company_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/topbarlayout"
        android:layout_marginStart="28dp"
        android:layout_marginTop="21dp"
        android:ems="10"
        android:hint="enter company name"
        android:layout_marginRight="@dimen/_20dp"
        android:inputType="textPersonName"/>

    <EditText
        android:id="@+id/editText_discount_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editText_company_name"
        android:layout_below="@+id/editText_company_name"
        android:layout_marginTop="19dp"
        android:ems="10"
        android:hint="Enter discount detail"
        android:layout_marginRight="@dimen/_20dp"
        android:inputType="textPersonName"
        />

    <EditText
        android:id="@+id/editText_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editText_discount_desc"
        android:layout_below="@+id/editText_discount_desc"
        android:layout_marginTop="17dp"
        android:ems="10"
        android:hint="enter location"
        android:layout_marginRight="@dimen/_20dp"
        android:inputType="textPersonName"
        />

    <EditText
        android:id="@+id/editText_expiry_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editText_location"
        android:layout_below="@+id/editText_location"
        android:layout_marginTop="17dp"
        android:ems="10"
        android:hint="enter expiry date"
        android:layout_marginRight="@dimen/_20dp"
        android:inputType="textPersonName"
        />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editText_expiry_date"
        android:layout_below="@+id/editText_expiry_date"
        android:layout_marginRight="@dimen/_20dp"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/save_deal_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40dp"
        android:layout_alignStart="@+id/spinner"
        android:layout_marginTop="21dp"
        android:textColor="@color/white"
        android:background="@color/green_color"
        android:layout_marginRight="@dimen/_20dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/_20dp"
        android:text="@string/add_deal_btn_label"/>
</RelativeLayout>