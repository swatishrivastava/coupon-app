<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="example.couponapp.com.couponapp">

    <application
        android:name="com.couponapp.BaseCouponApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.couponapp.home.DealsHomeActivity"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name="com.couponapp.admin.AddNewDealActivity"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme">
        </activity>
        <activity
            android:name="com.couponapp.home.category.AllDealsOfSelectedCategory"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme"></activity>
        <activity android:name="com.couponapp.login.LoginActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <service android:name="com.couponapp.service.DealPushNotificationService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"></action>
            </intent-filter>

        </service>
        <uses-library android:name="org.apache.http.legacy" android:required="false"/>
    </application>

</manifest>